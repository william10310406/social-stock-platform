# 資安模組環境變數配置
SECURITY_CONFIG_DIR=/app/security/configs
SECURITY_LOGGING_LEVEL=INFO
SECURITY_MONITORING_ENABLED=true
SECURITY_MONITORING_INTERVAL=60

# 資安模組閾值設定
SECURITY_THRESHOLDS_CPU_USAGE=80.0
SECURITY_THRESHOLDS_MEMORY_USAGE=85.0
SECURITY_THRESHOLDS_DISK_USAGE=90.0
SECURITY_THRESHOLDS_RESPONSE_TIME=5.0
SECURITY_THRESHOLDS_ERROR_RATE=0.05

# 加密設定
SECURITY_ENCRYPTION_ALGORITHM=AES-256-GCM
SECURITY_ENCRYPTION_KEY_ROTATION_DAYS=90

# 認證設定
SECURITY_AUTHENTICATION_SESSION_TIMEOUT=3600
SECURITY_AUTHENTICATION_MAX_LOGIN_ATTEMPTS=5
SECURITY_AUTHENTICATION_LOCKOUT_DURATION=300
