# Stock Insight Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=stock_insight_db
POSTGRES_HOST=db
DATABASE_URL=postgresql://your_db_user:your_secure_password@db:5432/stock_insight_db

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-replace-in-production
FLASK_APP=run.py
FLASK_ENV=development

# Security
FERNET_KEY=your-fernet-encryption-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Keys (if using external services)
# NEWS_API_KEY=your_news_api_key
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Logging
LOG_LEVEL=INFO

# Development/Production Settings
DEBUG=true
TESTING=false

# CORS Settings (frontend URL)
FRONTEND_URL=http://localhost:5173

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
