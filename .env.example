# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_database_name
DATABASE_URL=postgresql://user:password@db:5432/database_name

# Security Keys (Generate new ones for production!)
SECRET_KEY=your_secret_key_here_use_secrets_token_hex_32
FERNET_KEY=your_fernet_key_here_use_cryptography_fernet_generate_key

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Configuration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=86400      # 24 hours
JWT_REFRESH_TOKEN_EXPIRES=2592000   # 30 days

# API Keys (Optional - for future stock/news integration)
# STOCK_API_KEY=your_alpha_vantage_or_finnhub_api_key
# NEWS_API_KEY=your_news_api_key

# Email Configuration (Optional - for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=1
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password

# Development/Production Mode
NODE_ENV=development
